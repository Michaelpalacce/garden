views:
  - type: table
    name: Ephemeral
    filters:
      or:
        - state.containsAny("ephemeral")
        - and:
            - state.isEmpty()
            - file.folder != "Templates"
            - file.ext != "base"
            - file.ext != "canvas"
            - file.ext != "zip"
            - file.name != "Dockerfile"
            - file.name != "Scratch"
    order:
      - file.name
      - state
